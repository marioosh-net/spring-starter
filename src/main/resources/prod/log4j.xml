<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- APPENDERY -->
	<!-- wyjscie na konsole -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<!-- format -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p [%c{1}:%L] : %m%n" />
		</layout>
	</appender>
	
	<!-- wyjscie do pliku loga -->
	<appender name="file_all" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- sciezka do pliku loga -->
		<param name="File" value="${catalina.home}/logs/gallery.log" />
		<!-- dodawaj do pliku (przeciwienstwo: truncate) -->
		<param name="Append" value="true" />
		<!-- Rollover at midnight each day -->
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<!-- format -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<!-- wyjscie do pliku loga -->
	<appender name="file_fileservice" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- sciezka do pliku loga -->
		<param name="File" value="${catalina.home}/logs/gallery_fileservice.log" />
		<!-- dodawaj do pliku (przeciwienstwo: truncate) -->
		<param name="Append" value="true" />
		<!-- Rollover at midnight each day -->
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<!-- format -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	
	<!-- access log -->
	<appender name="accesslog" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- sciezka do pliku loga -->
		<param name="File" value="${catalina.home}/logs/gallery_access.log" />
		<!-- dodawaj do pliku (przeciwienstwo: truncate) -->
		<param name="Append" value="true" />
		<!-- Rollover at midnight each day -->
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<!-- format -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>	
	<!-- APPENDERY END -->

	<!-- LOGGERY -->
	<logger name="org.springframework">
		<level value="error" />
	</logger>
	<logger name="net.marioosh.gallery.utils.WebUtils">
		<level value="info" />
		<appender-ref ref="accesslog" />
	</logger>	
	<logger name="net.marioosh.gallery.FileService">
		<level value="debug" />
		<appender-ref ref="file_fileservice"/>
	</logger>
	<!-- LOGGERY END -->

	<!-- ROOT LOGGER -->
	<!-- to musi byc, z tego dziedzicza pozostale loggery -->
	<root>
		<!-- domyslnie od poziomu debug w gore bedzie logowane wszystko w pliku -->
		<level value="info" />
		<appender-ref ref="file_all" />
		<appender-ref ref="console" />
	</root>
	<!-- ROOT LOGGER END -->

</log4j:configuration>
