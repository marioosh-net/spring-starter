<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="one">
    
    <!-- flow scope variable -->
	<var name="photo" class="net.marioosh.springstarter.model.entities.Photo"/>
	
	<input name="msg"/>
	
	<view-state id="one">
		<on-entry>
			<set name="viewScope.helloMessage" value="msg"></set>
			<evaluate expression="photo.setName(photo.getName()+'one;')"/>
		</on-entry>
		<transition on="two" to="two"/>
		<transition on="home" to="home"/>
		<transition on="home2" to="home2"/>
		<transition on="data" to="data"/>
		<transition on="custom-handler" to="custom-handler"/>
		<transition on="test2" to="test2"/>
	</view-state>
	
	<view-state id="two">
		<on-entry>
			<evaluate expression="photo.setName(photo.getName()+'two;')"/>
		</on-entry>
		<transition on="one" to="one"/>
		<transition on="home" to="home"/>
	</view-state>
	
	<end-state id="home" view="externalRedirect:contextRelative:/app/home" />
	<end-state id="home2" view="externalRedirect:contextRelative:/app/home/#{msg}" />
	<end-state id="custom-handler">
		<output name="outphoto" value="flowScope.photo" type="net.marioosh.springstarter.model.entities.Photo"/>
	</end-state>
	<end-state id="data" view="externalRedirect:contextRelative:/app/data" >
		<output name="data" value="flowScope.photo" type="net.marioosh.springstarter.model.entities.Photo"/>
	</end-state>
	
	<end-state id="test2">
		<output name="id" value="123"/>
	</end-state>
	
</flow>
